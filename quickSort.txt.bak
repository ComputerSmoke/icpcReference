//sort into ascending order
private static void quickSort(int[] arr) {
		quickSortRec(arr, 0, arr.length-1);
	}
	
	private static void quickSortRec(int[] arr, int start, int end){
		  if(end <= start) return;
		  int splitIndex = partition(arr, start, end);
		  quickSortRec(arr, start, splitIndex);
		  quickSortRec(arr, splitIndex+1, end);
	  }
	
	  private static int partition(int[] arr, int start, int end){
		  int p = (int)(Math.random()*(end-start)+start);
		  int pivot = arr[p];
		  while(true) {
			  while(beacons[start] < pivot) start++;
			  while(beacons[end] > pivot) end--;
			  if(end <= start) break;
			  int temp = beacons[start];
			  beacons[start] = beacons[end];
			  beacons[end] = temp;
			  start++;
			  end--;
		  }
	    return end;
	  }